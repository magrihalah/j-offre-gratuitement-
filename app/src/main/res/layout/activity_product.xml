<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ProductActivity">

    <ImageView
        android:id="@+id/product_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/charity2" />

    <View
        android:id="@+id/product_divider_1"
        android:layout_width="match_parent"
        android:layout_marginTop="-15dp"
        android:layout_height="70dp"
        android:layout_below="@id/product_browse_btn"
        android:background="@drawable/vintage"
        android:backgroundTint="@color/black"

        />



    <TextView
        android:id="@+id/product_txt_info"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Information"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/product_browse_btn"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/product_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:padding="13dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Entez le nom du produit"
        android:inputType="textPersonName"
        android:textColorHint="@color/grey"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_below="@+id/product_divider_1" />

    <TextView
        android:id="@+id/product_txt_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_input_name"
        android:text="Ville"
        android:background="@drawable/input_design"
        android:padding="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="260dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textStyle="bold"
        />


    <Spinner
        android:id="@+id/product_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_input_name"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="150dp"
        />

    <EditText
        android:id="@+id/product_input_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_txt_city"
        android:hint="Enter votre numero de tele"
        android:inputType="phone"
        android:textColorHint="@color/grey"
        android:background="@drawable/input_design"
        android:padding="13dp"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />

    <View
        android:id="@+id/product_divider_2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/product_input_phone"
        android:background="@drawable/vintage"
        android:backgroundTint="@color/black"
         />

    <TextView
        android:id="@+id/product_txt_desc"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="Description"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/product_input_phone"
        android:layout_centerHorizontal="true"
        />



    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/product_input_desc"
        android:layout_width="381dp"
        android:layout_height="127dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:hint="Entrez la description du produit..."
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@id/product_txt_desc" />

    <Button
        android:id="@+id/product_upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttons"
        android:text="CONFIRMER"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_below="@id/product_input_desc" />

    <Button
        android:id="@+id/product_browse_btn"
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-6dp"
        android:background="@drawable/buttons"
        android:layout_marginBottom="28dp"
        android:text="Rechercher une image"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_below="@id/product_logo"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>